<div class='m-4'>
  <h1>New Review</h1>
  <div>
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :rating, :collection => (0..5), class:"form-select" %>
      <%= f.input :content, class:"form-control" %>
      <%= f.submit "Submit Review", class:"btn btn-outline-primary" %>
    <% end %>
  </div>
</div>
